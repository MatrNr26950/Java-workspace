<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="430.0" prefWidth="770.0" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.view.RootLayoutController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" onAction="#handleOpen" text="Datei">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleNew" text="Neu" />
                  <MenuItem mnemonicParsing="false" onAction="#handleOpen" text="Offen" />
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Schliessen" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Bearbeiten">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleSave" text="Speichern" />
                  <MenuItem mnemonicParsing="false" onAction="#handleSaveAs" text="Speichern als" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Hilfe">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAbout" text="Ueber" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
